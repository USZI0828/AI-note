<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zmy.mapper.TagMapper">
    <update id="updateInfo">
        update tag
        <set>
            <if test="tagName != null and tagName.trim() != ''">
                tag_name = #{tagName},
            </if>
        </set>
        where tag_id = #{tagId}
    </update>

    <select id="listPage" resultType="com.zmy.pojo.entity.Tag">
        select * from tag
    </select>

</mapper>

